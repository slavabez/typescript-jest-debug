{
  "name": "typescript-jest-debug",
  "version": "0.0.1",
  "description": "Demo for debugging typescript jest with node, React in vscode and webstorm",
  "main": "index.js",
  "repository": "git@github.com:slavabez/typescript-jest-debug.git",
  "author": "Slava Bezgachev <bezgachev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:server": "tsc -p ./src/server --pretty",
    "build:client": "parcel build ./src/client/static/index.html --out-dir './dist/client' --public-url '/'",
    "test": "jest"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "server/**/*.{ts,tsx}"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|js|tsx|jsx)",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.ts"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/supertest": "^2.0.5",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.5.0",
    "node-ts": "^2.1.2",
    "parcel-bundler": "^1.9.7",
    "parcel-plugin-typescript": "^1.0.0",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.1"
  }
}
